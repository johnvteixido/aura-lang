source "https://rubygems.org"

gem "parslet"        # Beautiful Ruby parser, perfect for DSLs
gem "torch-rb"       # Ruby bindings for PyTorch (great for ML)
gem "sinatra"        # Lightweight fast web backend
gem "puma"           # Fast concurrent server
gem "json"

group :development do
  gem "pry"
  gem "rerun"        # Auto-reload during dev
end
