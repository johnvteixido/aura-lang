#!/usr/bin/env ruby

require "aura"

if ARGV.empty?
  puts <<~WELCOME
    ðŸŒŸ Welcome to Aura v0.1 ðŸŒŸ
    A forgiving, human-friendly language for AI and fast web apps.

    Usage:
      aura run examples/mnist_classifier.aura  # Run an Aura file
  WELCOME
  exit
end

command = ARGV[0]
filename = ARGV[1]

case command
when "run"
  if filename && File.exist?(filename)
    Aura.run_file(filename)
  else
    puts "ðŸ˜” File not found: #{filename}. Want me to create a template?"
  end
else
  puts "Unknown command: #{command}"
end
